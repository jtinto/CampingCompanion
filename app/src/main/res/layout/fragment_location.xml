<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LocationFragment"
    android:background="@drawable/blurredbackground">
    <com.google.android.gms.maps.MapView
        android:id="@+id/MapView"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".9"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/MapFragmentBackButton"
            android:text="@string/BackText"
            android:background="@drawable/peblgreenroundedcornerssemitransparent"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/MapFragmentCenterButton"
            android:text="@string/CenterText"
            android:visibility="invisible"
            android:background="@drawable/peblgreenroundedcornerssemitransparent"/>
    </RelativeLayout>
</LinearLayout>